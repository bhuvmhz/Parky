@model NationalPark

@{
    ViewData["Title"] = "National Park";
    var title = "Create national park";
}

<form method="post" asp-action="Upsert" enctype="multipart/form-data">
    <div class="row backgroundWhite">
        <div class="col-12 mb-3">
            <a class="btn btn-success" asp-area="" asp-controller="NationalParks" asp-action="Index">Back to List</a>
        </div>
    </div>
    @if (Model.Id != 0)
    {
        <input type="hidden" asp-for="Id" />
        title = "Edit national park";
    }
    <div class="card">
        <div class="row p-3">
            <div class="col-12">
                <h1 class="h1 text-secondary">@title</h1>
            </div>
        </div>

        <div class="row p-3">
            <div class="col-8">
                <div class="form-group row">
                    <div class="col-3">
                        <p>Name</p>
                    </div>
                    <div class="col-6">
                        <input asp-for="Name" class="form-control form-control-sm">
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="col-3">
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-3">
                        <p>State</p>
                    </div>
                    <div class="col-6">
                        <input asp-for="State" class="form-control form-control-sm">
                        <span asp-validation-for="State" class="text-danger"></span>
                    </div>
                    <div class="col-3">
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-3">
                        <p>Image</p>
                    </div>
                    <div class="col-6">
                        <input asp-for="Picture" type="file" id="projectImage" name="files" multiple>
                    </div>
                    <div class="col-3">
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-3">
                        <p>Established</p>
                    </div>
                    <div class="col-6">
                        @{
                            var dateEst = "";
                            if (Model.Id != 0)
                            {
                                dateEst = Model.Established.ToShortDateString();
                            }
                        }
                        <input id="datepicker" value="@dateEst" type="text" asp-for="@Model.Established" class="form-control form-control-sm">
                    </div>
                    <div class="col-3">
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-3">
                    </div>
                    <div class="col-6">
                        <button type="submit" class="btn btn-primary" asp-controller="NationalParks" asp-action="Upsert">
                            @(Model.Id != 0? "Update" : "Create")
                        </button>
                    </div>
                    <div class="col-3">
                    </div>
                </div>
            </div>
            <div class="col-4" style="width:150px;">
                @if (Model.Picture != null)
                {
                    var base64 = Convert.ToBase64String(Model.Picture);
                    var imgSrc = string.Format("data:image/jpg;base64,{0}", base64);
                    <img class="img-thumbnail" src="@imgSrc" />
                }
            </div>
        </div>
    </div>
</form>

@section scripts {
    <script>
        $(function () {
            $('#datepicker').datepicker({
                changeMonth: true,
                changeYear: true,
                yearRange: "1500:2020"
            });
        });
    </script>
}