@model ParkyWeb.Models.User

@{
    ViewData["Title"] = "Login";
}

<div class="card">
    <div class="row p-3">
        <div class="col-md-4"></div>
        <div class="col-md-4" style="padding-top:5%; padding-bottom: 35%;">
            <h1 class="display-4 text-center">Register</h1>
            <form asp-action="Register" method="post">
                <div class="row mt-3">
                    <div class="col-md-12 text-center">
                        <input class="form-control" asp-for="Username" type="text" placeholder="Username" />
                    </div>
                </div>
                <div class="row mt-3">
                    <div class="col-md-12 text-center">
                        <input class="form-control" asp-for="Password" type="password" placeholder="Password" />
                    </div>
                </div>
                <div class="row mt-3">
                    <div class="col-md-12 text-center">
                        <button class="btn btn-block btn-success" type="submit" value="Submit">Register</button>
                    </div>
                </div>
            </form>
        </div>
        <div class="col-md-4"></div>
    </div>
</div>