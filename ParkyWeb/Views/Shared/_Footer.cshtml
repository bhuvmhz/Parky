@model bool

<footer class="border-top footer text-muted">
    <div class="container-fluid text-center">
        @if (@Model == true)
        {
            <a class="btn mr-2" asp-area="" asp-controller="Home" asp-action="Logout">Logout</a>
        }
        else
        {
            <a class="btn mr-2" asp-area="" asp-controller="Home" asp-action="Login">Login</a>
            <span>|</span>
            <a class="btn ml-2" asp-area="" asp-controller="Home" asp-action="Register">Register</a>
        }
    </div>
</footer>